<section class="section">
  <div class="container">
    <div class="columns is-centered reversed">
      <div class="column is-4">
        <h2 class="title is-2">התחבר</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email, label: "מייל", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password, label: "סיסמא", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control right">
              <%= f.input :remember_me, label: "זכור אותי", wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <%= f.button :submit, "התחבר", class:"button is-primary is-medium" %>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
