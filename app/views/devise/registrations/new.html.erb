<div class="section">
  <div class="container">
    <div class="columns is-centered reversed">
      <div class="column is-4">
        <h2 class="title is-2">הרשם</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :name, label: "שם", required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :email, label: "מייל", required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control right">
              <%= f.input :password, label: "סיסמא", required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, hint: ("מינימום #{@minimum_password_length} תווים" if @minimum_password_length) %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation, label: "אישור סיסמא", required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <span style="padding-bottom: 10px" class="labelText pull-right">במידה ונרשם כמעסיק נא סמן
                <%= f.check_box :admin, as: :boolean, checked_value: true, unchecked_value: false %>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <span style="padding-bottom: 10px" class="labelText pull-right">קראתי והסכמתי ל
                <%= link_to "תנאי השימוש", "/pages/תקנון_מחפשי_עבודה" %>
                <%= f.check_box :terms_of_service %>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control right">
              <%= f.button :submit, "הרשם", class:"button is-primary is-medium" %>
            </div>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>