<section class="section">
  <div class="container">
    <div class="columns is-centered reversed">
      <div class="column is-4">
        <h2 class="title is-2">שכחת את הססמא?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :email, label: "מייל", required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <%= f.button :submit, "שלח לי ססמא חדשה", class:"button is-outlined" %>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
