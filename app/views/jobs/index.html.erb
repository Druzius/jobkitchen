<div class="columns border-top">
  <div class="column is-11 pl6">
    <div class="pl3 pr1">
      <%= render 'panel' %>
    </div>
  </div>
</div>




<div class="container">
<div class="columns is-multiline">
    <% @jobs.each do |job| %>

      <div class="column is-one-third">

      <div class="card">
        <div class="card-header">
          <div class="card-header-title">
            <ul>
              <li><h3 class="title is-4 index-title"><%= link_to job.title, job_path(job) %></h3></li>
              <li><%= link_to job.job_author, job_path(job) %></li>
            </ul>
          </div>
          <div class="card-header-icon">
            <div class="card-image">
              <% if !job.avatar.file.nil? %>
                <%= link_to image_tag(job.avatar_url(:thumb), alt: job.job_author, width: 100, height: 100), job_path(job) %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-content">
          <div class="pv2 f6">
            <%= sanitize(job.description.truncate(160, separator: '</p>')) %>
          </div>
          <div class="card-footer">
            <div class="pr0 column has-text-right">
              <%= job_type(job.job_type) %>
              <p class="pt2 f6"><%= job.location %></p>
            </div>
            <% if current_user.try(:admin) || job_author(job) %>
              <ul class="pv3">
                <li class="inline-block">
                  <%= link_to 'ראה', job, class: 'button is-small is-link is-outlined' %></li>
                <li class="inline-block">
                  <%= link_to 'ערוך', edit_job_path(job), class: 'button is-small is-link is-outlined' %></li>
                <li class="inline-block">
                  <%= link_to 'מחק', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-link is-outlined' %></li>
              </ul>
            <% else %>
              <ul class="pv3">
                <li class="inline-block">
                  <%= link_to 'ראה', job, class: 'button is-normal is-link is-outlined' %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
      </div>

    <% end %>
</div>
</div>
