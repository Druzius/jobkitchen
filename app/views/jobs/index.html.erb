
  <div class="columns">
    <div class="column mb4">
      <div class="buttons is-centered">
        <%= render 'panel' %>
      </div>
    </div>
  </div>




<div class="container">
<div class="columns reversed is-multiline pa3">
    <% @jobs.each do |job| %>

      <div class="column is-one-third">

      <div class="card is-horizontal columns">
            <div class="card-image column is-two-fifths">
              <figure class="image ">
                <% if !job.avatar.file.nil? %>
                  <%= link_to image_tag(job.avatar_url(:thumb), alt: job.job_author, width: 100, height: 100), job_path(job) %>
                <% end %>
              </figure>
            </div>
        <div class="card-content column is-three-fifths">
          <div class="media">
            <ul>
              <li><h3 class="title is-4"><%= link_to job.title, job_path(job) %></h3></li>
              <li><%= link_to job.job_author, job_path(job) %></li>
            </ul>
          </div>

        <div class="card-content">

            <%= sanitize(job.description.truncate(14, separator: '</p>')) %>


            <div class="pr0 column has-text-right">
              <%= job_type(job.job_type) %>
              <p class="pt2 f6"><i class="fas fa-map-marker-alt"></i>  <%= job.location %></p>

            <% if current_user.try(:admin) || job_author(job) %>
              <ul class="pv3">
                <li class="inline-block">
                  <%= link_to 'ראה', job, class: 'button is-normal is-link is-outlined' %></li>
                <li class="inline-block">
                  <%= link_to 'ערוך', edit_job_path(job), class: 'button is-normal is-link is-outlined' %></li>
                <li class="inline-block">
                  <%= link_to 'מחק', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-normal is-link is-outlined' %></li>
              </ul>
            <% else %>
              <ul class="pv3">
                <li class="inline-block">
                  <%= link_to 'ראה', job, class: 'button is-normal is-link is-outlined' %></li>
              </ul>
            <% end %>
          </div>
        </div>
        </div>
      </div>
      </div>

    <% end %>
</div>
</div>
