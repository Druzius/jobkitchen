<div class="columns">
  <div class="column mb4">
    <div class="buttons is-centered">
      <%= render 'panel' %>
    </div>
  </div>
</div>
<div class="container">
  <div class="columns reversed is-multiline pa3">
    <% @jobs.each do |job| %>
      <% if job.state == "verified" %>
        <div class="column is-one-third">
          <div class="card-product" style="cursor:pointer;" onclick="document.location='<%= job_path(job) %>'">
            <div class="card-image">
              <% if !job.avatar.file.nil? %>
                <%= link_to image_tag(job.avatar_url(:thumb), alt: job.job_author, width: 100, height: 100), job_path(job) %>
              <% else %>
                <%= link_to image_tag('favicon.png', width: 100, height: 100), job_path(job) %>
              <% end %>
            </div>
            <% if job.job_type == 'ייעוץ, מכירות ושיווק' %>
              <div class="column card-product-link">
              <% elsif job.job_type == 'מקצועות המטבח' %>
                <div class="column card-product-success">
                <% elsif job.job_type == 'מקצועות כלליים' %>
                  <div class="column card-product-blue">
                  <% elsif job.job_type == 'מקצועות ניהול ומנהלה' %>
                    <div class="column card-product-primary">
                    <% elsif job.job_type == 'מקצועות שירות ואירוח' %>
                      <div class="column card-product-infos">
                      <% else %>
                        <div class="column card-product-blank">
                        <% end %>
                        <div class="title">
                          <h2><%= link_to job.title, job_path(job) %></h2>
                          <p><%= link_to job.job_author, job_path(job) %></p>
                        </div>
                        <div class="details">
                          <p class=""><%= sanitize(job.description.truncate(40, separator: '</p>')) %></p>
                          <p id="location"><i class="fas fa-map-marker-alt"></i>  <%= job.location %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>