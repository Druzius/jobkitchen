<%= simple_form_for @job, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "כותרת", required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "שף ראשי" %>
    </div>
  </div>
  <div class="columns">
    <div class="field column is-4">
      <div class="control is-pulled-right">
        <label class="label">סוג עבודה:</label>
        <div class="control has-icons-left">
          <span class="select">
            <%= f.input_field :job_type, required: true, collection: Job::JOB_TYPES, prompt: "סוג עבודה" %>
          </span>
          <span class="icon is-small is-left">
            <i class="fa fa-briefcase"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="field column is-4">
      <div class="control is-pulled-right">
        <label class="label">איזור:</label>
        <div class="control has-icons-left">
          <span class="select">
            <%= f.input_field :location, required: true, collection: Job::JOB_AREA, prompt: "איזור" %>
          </span>
          <span class="icon is-small is-left">
            <i class="fa fa-map-marker"></i>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :description, label: "תיאור", required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>
  <div class="columns">
    <div class="field column">
      <div class="control">
        <%= f.input :job_author, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "שם החברה" %>
      </div>
    </div>
  </div>
  <div class="columns">
    <div class="field column is-4">
      <div class="control">
        <label class="label">תמונת לוגו</label>
        <div class="file">
          <label class="file-label">
            <%= f.input :avatar, as: :file, required: false, input_html: { class:"file-input job-avatar" }, label: false, wrapper: false %>
            <span class="file-cta">
              <span class="file-icon"><i class="fa fa-upload"></i></span>
              <span class="file-label">בחר קובץ…</span>
            </span>
          </label>
        </div>
      </div>
    </div>
    <div class="column">
      <output id="list"></output>
    </div>
  </div>
  <hr />
  <%= render 'payment' %>
  <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
<% end %>
