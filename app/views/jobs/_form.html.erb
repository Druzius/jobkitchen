<%= simple_form_for @job, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="field">
    <div class="control">
      <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Head Chef" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :apply_url, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
    </div>
  </div>
  <div class="columns">
    <div class="field column is-4">
      <div class="control">
        <label class="label">Job Type:</label>
        <div class="control has-icons-left">
          <span class="select">
            <%= f.input :job_type, collection: Job::JOB_TYPES, prompt: "Select a job type" %>
          </span>
          <span class="icon is-small is-left">
            <i class="fa fa-briefcase"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="field column">
      <div class="control">
        <%= f.input :location, require: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :url %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :job_author %>
    </div>
  </div>
  <%= f.button :submit %>
<% end %>