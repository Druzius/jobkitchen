<%= simple_form_for [@job, @job_application] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="columns">
    <div class="field column is-6">
      <div class="control">
        <%= f.input :full_name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="field column is-6">
      <div class="control">
        <%= f.input :city, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="field column is-6">
      <div class="control">
        <%= f.input :phone_number, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>


    <div class="field column is-6">
      <div class="control">
        <%= f.input :email, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>
  </div>

  <div class="columns">
    <div class="field column is-4">
      <div class="control">
        <label class="label">Upload a Resume</label>
        <div class="file">
          <label class="file-label">
            <%= f.input :resume, as: :file, required: false, input_html: { class:"file-input job_application-avatar" }, label: false, wrapper: false %>
            <span class="file-cta">
              <span class="file-icon"><i class="fa fa-upload"></i></span>
              <span class="file-label">Choose a fileâ€¦</span>
            </span>
          </label>
        </div>
      </div>
    </div>
    <div class="column">
      <output id="list"></output>
    </div>
  </div>
  <hr />

  <div class="column">
    <h4 class="subtitle is-6">Don't have a resume?</h4> <h4 class="subtitle is-4">Tell us about yourself</h4>
  </div>
  <hr />

  <div class="field">
    <div class="control">
      <%= f.input :summary, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Tell potential employers why you are a great hire" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :work_experience, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Company, Position, Years, etc." %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :education, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "College, Degree, Years, etc." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
<% end %>
